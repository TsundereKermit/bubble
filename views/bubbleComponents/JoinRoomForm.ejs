<!-- Rendered data -->
<div id="name" class="d-none"><%= name %></div>
<div id="roomType" class="d-none"><%= roomType %></div>
<!-- Button that calls the modal popup -->
<!-- Makes the button hidden or shown by default depending on the room type-->
<% if(roomType === 'normal') { %>
<button id="roomBtn2" type="button" class="btn btn-primary" data-toggle="modal" data-target="#joinRoomModal">
  Join room
</button>
<% } %>
<% if(roomType === 'DM') { %>
  <button id="roomBtn2" type="button" class="btn btn-primary d-none" data-toggle="modal" data-target="#joinRoomModal">
    Join room
  </button>
<% } %>
<!-- joinRoomModal popup -->
<div class="modal fade" tabindex="-1" role="dialog" id="joinRoomModal">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Join room</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form action="/index/joinRoom" method="POST" id="joinRoomForm">
          <div class="form-group">
            <label for="inputUser">Username</label>
            <input type="text" class="form-control" name="inputUser" id="inputUser" value=<%- name %> readonly>
          </div>
          <div class="form-group">
            <label for="roomId">Room Id</label>
            <input type="text" class="form-control" name="roomId" id="roomId" placeholder="Room Id">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" form="joinRoomForm" class="btn btn-primary">Join Room</button>
      </div>
    </div>
  </div>
</div>